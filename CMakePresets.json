{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 6
  },
  "configurePresets": [
    {
      "name": "otladka",
      "displayName": "Отладка (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug",
      "toolchainFile": "${sourceDir}/Automation/CMAKE/Toolchains/toolchain-msvc.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_BUILD_TYPE": "Debug",
        "VENDOR_GLFW_FROM_GIT": "ON",
        "VENDOR_GLFW_USE_CLONE": "OFF",
        "ENGINE_VENDOR_DIR": "${sourceDir}/Engine/vendor",
        "VENDOR_GLFW_GIT_TAG": "3.3.8"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "reliz",
      "displayName": "Релиз (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-release",
      "toolchainFile": "${sourceDir}/Automation/CMAKE/Toolchains/toolchain-msvc.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_BUILD_TYPE": "Release",
        "VENDOR_GLFW_FROM_GIT": "ON",
        "VENDOR_GLFW_USE_CLONE": "OFF",
        "ENGINE_VENDOR_DIR": "${sourceDir}/Engine/vendor",
        "VENDOR_GLFW_GIT_TAG": "3.3.8"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "otladka",
      "displayName": "Отладка (Ninja)",
      "configurePreset": "otladka"
    },
    {
      "name": "reliz",
      "displayName": "Релиз (Ninja)",
      "configurePreset": "reliz"
    }
  ]
}
